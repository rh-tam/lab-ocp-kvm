echo input your pull-secret from https://cloud.redhat.com/openshift/install/metal/user-provisioned

read -p ':' pull_sec

echo input your rhn account, which is Red Hat Customer Portal credentials

read -sp ':' rhn_user

echo rhn passwd, which is rhn account related passwd

read -sp ':' rhn_passwd

export PULL_SEC=${pull_sec}
export RHNUSER=${rhn_user}
export RHNPASS=${rhn_passwd}

echo welcome ${RHNUSER}
echo done ! enjoy
